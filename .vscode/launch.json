  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "name": "Run tests",
      "request": "launch",
      "args": [
        ".tmp/test",
        "--runInBand",
        "--no-cache"
      ],
      "cwd": "${workspaceFolder}",
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "program": "${workspaceFolder}/node_modules/jest/bin/jest",
      "preLaunchTask": "build:test"
    }
  ]
}
